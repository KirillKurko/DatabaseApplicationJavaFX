<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane fx:controller="application.controllers.AddCountryController" xmlns:fx="http://javafx.com/javafx/1" prefWidth="" prefHeight="1000" hgap="10" vgap="10">
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
    <Group fx:id="labels">
        <Label fx:id="nameLabel" text="Name" prefWidth="50" prefHeight="100" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="capitalLabel" text="Capital" prefWidth="50" prefHeight="100" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="languageLabel" text="Language" prefWidth="50" prefHeight="100" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    </Group>
    <Group fx:id="textFields">
        <TextField fx:id="nameTextField" prefWidth="150" prefHeight="50" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
        <TextField fx:id="capitalTextField" prefWidth="150" prefHeight="50" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
        <TextField fx:id="languageTextField" prefWidth="150" prefHeight="50" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
    </Group>
    <Button fx:id="addCountryButton" text="Add country" prefWidth="100" prefHeight="50" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>